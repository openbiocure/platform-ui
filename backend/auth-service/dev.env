# Auth Service Development Configuration
DEBUG=true
SERVICE_NAME=auth-service
VERSION=1.0.0

# Database Configuration
DB_HOST=172.16.14.112
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=openbiocure_auth

# JWT Configuration
SECRET_KEY=dev-secret-key-change-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth Configuration (optional)
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# Security
BCRYPT_ROUNDS=12
SESSION_EXPIRE_MINUTES=30
MAX_SESSIONS_PER_USER=3

# Multi-tenant Security
TENANT_ISOLATION_ENABLED=true
TENANT_KEY_ROTATION_HOURS=48

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL=false
REDIS_MAX_CONNECTIONS=10
REDIS_CLUSTER_ENABLED=false
REDIS_CLUSTER_NODES=
REDIS_MAX_REDIRECTS=3

# Service Registry - Service Secrets (generate secure random strings)
WORKSPACE_SERVICE_SECRET=workspace_dev_secret_123
PROJECT_SERVICE_SECRET=project_dev_secret_456
ANALYTICS_SERVICE_SECRET=analytics_dev_secret_789
AUTH_SERVICE_SECRET=auth_dev_secret_012

# Service Registry - Service Permissions (comma-separated)
SERVICE_PERMISSIONS_WORKSPACE=project,analytics,auth
SERVICE_PERMISSIONS_PROJECT=workspace,analytics,auth
SERVICE_PERMISSIONS_ANALYTICS=workspace,project,auth
SERVICE_PERMISSIONS_AUTH=workspace,project,analytics

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","https://app.openbiocure.com"]
