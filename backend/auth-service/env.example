# Service Registry Environment Variables
# Copy this file to .env and set your actual secrets
# NEVER commit .env files to version control

# Service Secrets (generate secure random strings)
WORKSPACE_SERVICE_SECRET=your_workspace_secret_here
PROJECT_SERVICE_SECRET=your_project_secret_here
ANALYTICS_SERVICE_SECRET=your_analytics_secret_here
AUTH_SERVICE_SECRET=your_auth_secret_here

# Service Permissions (comma-separated)
SERVICE_PERMISSIONS_WORKSPACE=project,analytics,auth
SERVICE_PERMISSIONS_PROJECT=workspace,analytics,auth
SERVICE_PERMISSIONS_ANALYTICS=workspace,project,auth
SERVICE_PERMISSIONS_AUTH=workspace,project,analytics

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL=false
REDIS_MAX_CONNECTIONS=10
REDIS_CLUSTER_ENABLED=false
REDIS_CLUSTER_NODES=
REDIS_MAX_REDIRECTS=3

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/openbiocure_auth

# JWT
SECRET_KEY=your_jwt_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
