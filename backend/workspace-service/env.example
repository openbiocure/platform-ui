# Workspace Service Environment Configuration

# Service Configuration
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8004
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://workspace_user:workspace_pass@localhost:5432/workspace_db
DATABASE_POOL_SIZE=10
DATABASE_POOL_OVERFLOW=20

# Vector Store Configuration (Elasticsearch)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=openbiocure

# File Storage Configuration (MinIO)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=workspace_access_key
MINIO_SECRET_KEY=workspace_secret_key
MINIO_SECURE=false
MINIO_WORKSPACE_BUCKET=workspace-documents

# Cache Configuration (Redis)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Event Bus Configuration (Kafka)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=workspace-service

# AI/ML Configuration
EMBEDDINGS_MODEL=sentence-transformers/all-MiniLM-L6-v2
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=100

# Service Integration URLs
AUTH_SERVICE_URL=http://localhost:8001
PROJECT_SERVICE_URL=http://localhost:8002
ANALYTICS_SERVICE_URL=http://localhost:8003
AI_SERVICE_URL=http://localhost:8005

# Security Configuration
SECRET_KEY=your_super_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Processing Configuration
MAX_FILE_SIZE=104857600  # 100MB
SUPPORTED_FORMATS=["pdf","doc","docx","txt","html","xml","csv","json"]
PROCESSING_TIMEOUT=300

# Query Configuration
MAX_QUERY_LENGTH=1000
DEFAULT_RESULTS_LIMIT=10
MAX_RESULTS_LIMIT=100
SIMILARITY_THRESHOLD=0.7

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=8005
